<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="personal_data_activity_rl">
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/sel_btnbg_op_course</item>
    </style>

    <style name="personal_data_activity_rl_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#393E4B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="personal_data_activity_rl_text_one">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="personal_data_activity_rl_image">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:src">@drawable/ic_security_right</item>
    </style>

    <style name="personal_data_activity_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gen_app_split_gray</item>
    </style>


</resources>
