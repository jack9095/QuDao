<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_title_rl"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="48dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/home_title_rl_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/home_title_rl_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#101010"
        android:textSize="22sp"
        android:layout_marginLeft="15dp"
        android:text="高顿教育" />

    <TextView
        android:id="@+id/home_title_rl_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#101010"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="高顿教育" />

    <ImageView
        android:id="@+id/home_title_rl_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/disscuss_detail_colse" />

</RelativeLayout>
