<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_live_adapter_three_one"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_live_adapter_three_image_view"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:riv_border_color="#333333"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="clamp" />

        <TextView
            android:id="@+id/item_live_adapter_three_text_view"
            android:text=""
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="166dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_live_adapter_three_text_view_left_date"
                android:layout_width="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_live_adapter_three_text_view_left_number"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#F39C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_live_adapter_three_two"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_live_adapter_three_image_view_one"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:riv_border_color="#333333"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="clamp" />

        <TextView
            android:id="@+id/item_live_adapter_three_text_view_one"
            android:text=""
            android:layout_marginTop="@dimen/dp_10"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="166dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_live_adapter_three_text_view_right_date"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#999999"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_live_adapter_three_text_view_right_number"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#F39C13"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>