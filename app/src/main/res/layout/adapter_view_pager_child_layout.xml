<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_home_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one"
            style="@style/home_item_five_layout_text"
            android:layout_marginLeft="15dp"
            android:text="选课" />


        <TextView
            android:id="@+id/two"
            style="@style/home_item_five_layout_text"
            android:text="直播" />


        <TextView
            android:id="@+id/three"
            style="@style/home_item_five_layout_text"
            android:text="题库" />

        <TextView
            android:id="@+id/four"
            style="@style/home_item_five_layout_text"
            android:layout_marginRight="15dp"
            android:text="问答" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/five"
            style="@style/home_item_five_layout_text"
            android:layout_marginLeft="15dp"
            android:text="选课" />


        <TextView
            android:id="@+id/six"
            style="@style/home_item_five_layout_text"
            android:text="直播" />


        <TextView
            android:id="@+id/seven"
            style="@style/home_item_five_layout_text"
            android:text="题库" />

        <TextView
            android:id="@+id/eight"
            style="@style/home_item_five_layout_text"
            android:layout_marginRight="15dp"
            android:text="问答" />

    </LinearLayout>
</LinearLayout>
