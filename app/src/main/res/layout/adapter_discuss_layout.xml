<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="18dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/adapter_discuss_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_discuss_layout_head_img"
            android:contentDescription="@string/app_name"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/adapter_discuss_layout_name"
            android:text="曹勇"
            android:textColor="#3CBDA3"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/adapter_discuss_layout_fabulous"
            android:contentDescription="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/adapter_discuss_layout_content"
        android:layout_below="@id/adapter_discuss_layout_head"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_discuss_layout_time"
        android:layout_below="@id/adapter_discuss_layout_content"
        android:textColor="#899099"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@id/adapter_discuss_layout_time"
        android:layout_marginTop="10dp"
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>
