<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_special_adapter_two_root"
    android:layout_marginTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_special_adapter_two_round_image"
        android:layout_width="166dp"
        android:layout_height="92dp"
        android:scaleType="centerCrop"
        app:riv_border_color="#333333"
        app:riv_corner_radius="4dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp" />

    <TextView
        android:id="@+id/item_special_adapter_two_title"
        android:layout_toRightOf="@+id/item_special_adapter_two_round_image"
        android:maxLines="2"
        android:textColor="#333333"
        android:layout_marginLeft="11dp"
        android:text="必须知道的财经人100件事时代大厦撒是迁安市所"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_special_adapter_two_number"
        android:layout_toRightOf="@+id/item_special_adapter_two_round_image"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:textColor="#999999"
        android:layout_marginLeft="11dp"
        android:text="123人学习"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
