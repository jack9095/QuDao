<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:layout_width="290dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/live_child_image"
        android:scaleType="fitXY"
        android:layout_width="290dp"
        android:layout_height="217dp" />

    <TextView
        android:id="@+id/live_child_title"
        android:layout_below="@id/live_child_image"
        android:text="CFA思博体验课|60分钟带你玩转"
        android:textColor="#999999"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/live_child_content"
        android:layout_below="@id/live_child_title"
        android:text=""
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/live_child_right_view"
        android:layout_toRightOf="@id/live_child_image"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="180dp"/>

</RelativeLayout>
