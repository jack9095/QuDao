<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/open_live_top_view"
        android:background="#f0f0f0"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/live_open_head_image_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/live_open_head_image"
            android:layout_below="@id/bar_in_f"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:layout_width="38dp"
            android:layout_height="38dp" />

        <TextView
            android:id="@+id/live_open_title"
            android:layout_below="@id/text_live_open"
            android:layout_alignTop="@id/live_open_head_image"
            android:layout_toRightOf="@id/live_open_head_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="85dp"
            android:textSize="13sp"
            android:textColor="#424242"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/live_open_content"
            android:layout_toRightOf="@id/live_open_head_image"
            android:layout_below="@id/live_open_title"
            android:layout_alignBottom="@id/live_open_head_image"
            android:layout_marginRight="85dp"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:textColor="#8c8c8c"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/live_open_head_image_rl_fabulous"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="54dp"
            android:layout_height="28dp">
            <ImageView
                android:id="@+id/live_open_head_image_rl_fabulous_image"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/live_open_head_image_rl_fabulous_number"
                android:layout_marginLeft="3dp"
                android:textColor="#424242"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/live_open_head_image_ll"
        android:layout_below="@+id/live_open_head_image_rl"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/live_open_head_image_rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="7dp"
            android:text="高考志愿报金融专业的度在想些什么呢"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/live_open_head_image_rl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingRight="10dp"
            android:text="CIA快咨询·321阅读"
            android:textColor="#8c8c8c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_open_head_image_rl_content_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingRight="10dp"
            android:text="CIA快咨询·321阅读"
            android:textColor="#8c8c8c"
            android:textSize="14sp" />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/live_open_head_image_ll"
        android:layout_marginTop="12dp"
        android:background="#f0f0f0" />

</RelativeLayout>
