<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_discover"
        android:text="发现"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_discover_more"
        android:visibility="gone"
        android:text="设置偏好"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_discover_title"
        android:layout_below="@id/text_discover"
        android:lines="2"
        android:ellipsize="end"
        android:text="高考志愿报金融专业的度在想些什么呢"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/text_discover_image"
        android:layout_below="@id/text_discover"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    
    <TextView
        android:id="@+id/text_discover_bottom_content"
        android:layout_below="@id/text_discover_title"
        android:text="CIA快咨询·321阅读"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/text_discover_image_close"
        android:layout_below="@id/text_discover_title"
        android:layout_toLeftOf="@id/text_discover_image"
        android:layout_marginRight="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <View
        android:layout_marginTop="15dp"
        android:layout_below="@+id/text_discover_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>
