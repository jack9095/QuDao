<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/text_discover_rl"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_discover"
            android:text="发现"
            android:textSize="17sp"
            android:textColor="#242b36"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_discover_more"
            android:text="设置偏好"
            android:textColor="#899099"
            android:textSize="14sp"
            android:paddingRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text_discover_more_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/text_discover_more_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_f"
            android:layout_width="7dp"
            android:layout_height="12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_discover_title"
        android:layout_below="@id/text_discover_rl"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="#242B36"
        android:paddingTop="2dp"
        android:layout_alignTop="@id/text_discover_fl"
        android:layout_toLeftOf="@id/text_discover_fl"
        android:text="高考志愿报金融专业的度在想些什么呢"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/text_discover_fl"
        android:layout_below="@id/text_discover_rl"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_layout_f"
        android:layout_width="102dp"
        android:layout_height="72dp">
        <!--<com.example.fly.baselibrary.widget.RoundImageView
            android:id="@+id/text_discover_image"
            android:scaleType="centerCrop"
            app:type="circle"
            android:layout_width="102dp"
            android:layout_height="72dp" />-->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/text_discover_image"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            android:layout_width="102dp"
            android:layout_height="72dp"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="false" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/round_layout_transparent"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/text_discover_play"
                android:src="@mipmap/play_f"
                android:layout_centerVertical="true"
                android:layout_width="9dp"
                android:layout_height="9dp" />
            <TextView
                android:id="@+id/text_discover_time"
                android:layout_toRightOf="@id/text_discover_play"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:textSize="9sp"
                android:text="12:26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_discover_bottom_content"
        android:layout_below="@id/text_discover_title"
        android:layout_marginTop="14dp"
        android:text="CIA快咨询·321阅读"
        android:paddingRight="10dp"
        android:textColor="#899099"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/text_discover_image_close"
        android:layout_below="@id/text_discover_title"
        android:layout_toLeftOf="@id/text_discover_fl"
        android:layout_alignBottom="@id/text_discover_fl"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/close_f"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/text_discover_fl"
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>
