<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/find_rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/text_discover_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignTop="@+id/text_discover_fl"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/text_discover_fl"
            android:ellipsize="end"
            android:lines="2"
            android:paddingTop="2dp"
            android:lineSpacingMultiplier="1.3"
            android:text="高考志愿报金融专业的度在想些什么呢"
            android:textColor="#242B36"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/text_discover_fl"
            android:layout_width="102dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/text_discover_image"
                android:layout_width="102dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toLeftOf="@+id/text_discover_fl"
            android:layout_below="@+id/text_discover_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_discover_bottom_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="12dp"
                android:text="CIA快咨询·321阅读"
                android:textColor="#899099"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/text_discover_fl"
            android:layout_marginTop="12dp"
            android:background="#f0f0f0" />

    </RelativeLayout>
</LinearLayout>
